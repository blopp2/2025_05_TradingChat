{
  "manifest_version": 3,
  "name": "TradingView Analyzer",
  "description": "KI-gest√ºtzte Chartanalyse direkt in TradingView.",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "tabCapture",
    "sidePanel"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "*://*.tradingview.com/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "TradingView Analyzer"
  },
  "side_panel": {
    "default_path": "src/sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.tradingview.com/*"],
      "js": ["src/content_script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
